{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenFrp-CrossPlatformLauncher",
  "version": "0.1.6",
  "identifier": "com.of-cfl.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3003",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenFrp Cross Platform Launcher",
        "width": 1130,
        "height": 650
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/desktop.ico"
    ],
    "windows": {
      "wix": {
        "enableElevatedUpdateTask": true
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "openfrp" }
      ],
      "desktop": {
        "schemes": ["openfrp"]
      }
    }
  }
}
