{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenFrp-CrossPlatformLauncher",
  "version": "0.3.1",
  "identifier": "com.of-cpl.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3003",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenFrp Cross Platform Launcher",
        "width": 1205,
        "height": 650,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "ZGIT Network",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "timestampUrl": null,
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": true,
        "compression": "lzma",
        "languages": ["SimpChinese", "TradChinese", "English", "Japanese"],
        "installerIcon": "icons/desktop.ico"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "openfrp" }
      ],
      "desktop": {
        "schemes": ["openfrp"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://r.zyghit.cn/ofcpl/update/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBMjgzNjI4RTY2MkFFMkMKUldRc3JtTG1LRFlvS2lXS1lrSXkzVGJhYkIxeTJBVTl0NzNabWNYS2Z5YmQ3Z2RJdDJHRHhVRjcK"
    }
  }
}
